{
  "name": "jetbrains-search",
  "displayName": "JetBrains Find in Files",
  "description": "Find text in files functionality similar to JetBrains IDEs",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jetbrainsSearch.searchEverywhere",
        "title": "Find in Files"
      }
    ],
    "keybindings": [
      {
        "command": "jetbrainsSearch.searchEverywhere",
        "key": "shift+f",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
} 